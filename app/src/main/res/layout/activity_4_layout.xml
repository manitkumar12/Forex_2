<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3f88fb"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#3f88fb"
            >





            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                >


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="50dp"
                    android:background="#3f88fb"
                    android:layout_height="match_parent">

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pic" />

                    <TextView
                        android:id="@+id/btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/photo_1"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="85dp"
                        />




                </FrameLayout>

            </FrameLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"




                >


                <TextView
                    android:id="@+id/name_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    />

                <EditText
                    android:id="@+id/name_text_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:layout_below="@+id/name_text_view_sign_in"
                    />

                <View
                    android:id="@+id/name_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/name_text_sign_in"
                    android:layout_alignEnd="@+id/name_text_sign_in"
                    android:layout_below="@+id/name_text_sign_in"

                    />




                <TextView
                    android:id="@+id/profession_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Professional"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/name_border_line"
                    />

                <EditText
                    android:id="@+id/profession_edit_text_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:layout_below="@+id/profession_text_view_sign_in"
                    />



                <View
                    android:id="@+id/profession_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/profession_edit_text_sign_in"
                    android:layout_below="@+id/profession_edit_text_sign_in"

                    />





                <TextView
                    android:id="@+id/email_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/profession_border_line"
                    />

                <EditText
                    android:id="@+id/email_edit_text_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:layout_below="@+id/email_text_view_sign_in"
                    />



                <View
                    android:id="@+id/email_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/email_edit_text_sign_in"
                    android:layout_alignEnd="@+id/eye"
                    android:layout_below="@+id/email_edit_text_sign_in"

                    />

                <TextView
                    android:id="@+id/phone_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/email_border_line"
                    />

                <EditText
                    android:id="@+id/phone_edit_text_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:layout_below="@+id/phone_text_view_sign_in"
                    />



                <View
                    android:id="@+id/phone_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/phone_edit_text_sign_in"
                    android:layout_alignEnd="@+id/eye"
                    android:layout_below="@+id/phone_edit_text_sign_in"

                    />






            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="19dp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                app:cardElevation="0dp"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/text_view_next"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="Next"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#3f88fb"
                        />




                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>






</LinearLayout>

