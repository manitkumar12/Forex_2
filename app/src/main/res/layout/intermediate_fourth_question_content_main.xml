<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context="com.grademojo.forex_2.Main9Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/zoom"

        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:background="#3f88fb"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            >

            <TextView
                android:id="@+id/intermediate_fourth_question_menu_bar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu"
                android:layout_gravity="start"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="What is your motivation ?"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                />






        </LinearLayout>




        <WebView
            android:id="@+id/web_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

        </WebView>
        <WebView
            android:id="@+id/web_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

        </WebView>
        <WebView
            android:id="@+id/web_text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

        </WebView>

        <WebView
            android:id="@+id/web_text_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

        </WebView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_intermediate_fourth_question"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#3f88fb"
            app:cardElevation="0dp"
            android:layout_gravity="end"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/text_view_intermediate_fourth_question"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:text="next"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/aa"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    />




            </LinearLayout>


        </android.support.v7.widget.CardView>













    </LinearLayout>



</ScrollView>